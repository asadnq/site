---
import { Navbar } from '@/components/navbar';
import BaseHead from '../components/BaseHead.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
import Footer from '@/components/Footer.astro';
import { ClientRouter } from 'astro:transitions';
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
    <ClientRouter />
  </head>
  <body>
    <!-- <div
      class="fixed top-0 left-0 backdrop-blur-sm bg-gradient-to-tr from-black/30 to-primary/10 w-screen h-screen -z-10"
    > -->

    <div
      class="z-30 fixed bottom-0 right-0 bg-blue-500 px-8 py-1 -rotate-45 translate-x-[40px] -translate-y-[35px] shadow-lg"
    >
      <span class="text-foreground text-xs font-bold uppercase">
        Under Development
      </span>
    </div>
    <div class="min-h-screen relative z-20">
      <Navbar client:only="react" />
      <main class="md:max-w-4xl mx-auto flex flex-col min-h-[80vh]">
        <slot />
      </main>
      <Footer />
    </div>
  </body>
</html>
