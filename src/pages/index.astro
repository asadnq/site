---
import { TechStackList } from '@/components/personal-info/tech-stack-list';
import BaseHead from '../components/BaseHead.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
import { ContactList } from '@/components/contact-list.tsx';
// import { CardMenuList } from '@/components/card-menu-list';
import { Navbar } from '@/components/navbar.tsx';
import Footer from '@/components/Footer.astro';
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>
  <body>
    <Navbar client:only="react" />
    <main class="md:max-w-4xl mx-auto flex flex-col">
      <div
        class="min-h-screen flex-1 flex flex-col gap-y-4 md:gap-y-8 justify-center items-center px-12 py-8"
      >
        <!-- Heading and brief bio-->
        <div class="flex flex-col gap-y-4">
          <span
            class="relative left-[-40px] text-2xl font-bold text-foreground font-display-2 leading-loose"
            >ðŸ‘‹ Hi there,</span
          >
          <h1 class="text-7xl sm:text-9xl font-extrabold font-display">
            I'm Asad
          </h1>
          <p class="relative left-[40px] text-xl font-regular">
            A <span class="font-bold text-secondary">software developer</span>
            with a passion for literature, languages, and community.
          </p>
        </div>
        <!-- Contact list -->
        <div>
          <ContactList />
        </div>
      </div>
      <section class="flex flex-col gap-y-4 px-4">
        <h2 class="text-4xl gradient-text font-bold">Tech stack</h2>
        <span class="text-base text-muted-foreground"
          >Here's some of the tools I have used both professionally and
          personally
        </span>
        <div class="py-4">
          <TechStackList client:only="react" />
        </div>
      </section>
    </main>
    <Footer />
  </body>
</html>
