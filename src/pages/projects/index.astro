---
import Base from '@/layouts/Base.astro';
import {
  ProjectCard,
  type ProjectCardProps,
} from '@/components/project-card.tsx';

const projects: ProjectCardProps[] = [
  {
    title: 'Turborepo Boilerplate',
    description: 'A boilerplate for Turborepo',
    repoLink: 'https://github.com/asadnq/turborepo-boilerplate',
    id: 'turborepo-boilerplate',
    techStackIds: ['turborepo', 'next-js', 'ts'],
  },
];
---

<Base>
  <section class="py-8 px-4 sm:px-0">
    <div class="flex flex-col gap-y-4">
      <h1 class="text-gradient text-7xl font-bold">Projects</h1>
      <p class="text-muted-foreground text-xl">
        Here are some of the projects I've worked on.
      </p>
    </div>
    <div class="h-8"></div>
    <div class="grid grid-cols-2 sm:grid-cols-3 w-full gap-8">
      {
        Array(10)
          .fill(projects[0])
          .map((el, i) => <ProjectCard client:only="react" {...el} />)
      }
    </div>
  </section>
</Base>
